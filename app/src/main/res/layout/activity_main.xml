<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TableRow
        android:id="@+id/table_head"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.189">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="   Цех 1  " />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Цех2  " />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Цех 3  " />

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="Непроиз потреб" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Всего распредел" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Конечный продукт" />

    </TableRow>

    <TableRow
        android:id="@+id/table_row1"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        app:layout_constraintTop_toBottomOf="@id/table_head"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цех 1  " />

        <EditText
            android:id="@+id/row1_1"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/row1_2"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/row1_3"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/row1_4"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/row1_5"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/row1_6"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="15sp"/>


    </TableRow>

    <TableRow
        android:id="@+id/table_row2"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        app:layout_constraintTop_toBottomOf="@id/table_row1"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цех 2  " />

        <EditText
            android:id="@+id/row2_1"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/row2_2"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/row2_3"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/row2_4"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/row2_5"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/row2_6"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="15sp"/>


    </TableRow>

    <TableRow
        android:id="@+id/table_row3"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        app:layout_constraintTop_toBottomOf="@id/table_row2"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цех 3  " />

        <EditText
            android:id="@+id/row3_1"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/row3_2"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/row3_3"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/row3_4"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/row3_5"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/row3_6"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="15sp"/>


    </TableRow>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result will be displayed here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/table_row3"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        app:layout_constraintTop_toBottomOf="@+id/resultTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:onClick="onCalculateButtonClick" />




</androidx.constraintlayout.widget.ConstraintLayout>